<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="426dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="10dp"
            android:text="Carries all the information you need while travelling"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="357dp"
            android:layout_height="38dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="10dp"
            android:text="Your ultimate travel assistant"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="413dp"
            android:layout_height="91dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="59dp"
            android:defaultFocusHighlightEnabled="true"
            android:fontFamily="sans-serif-light"
            android:paddingHorizontal="20sp"
            android:shadowColor="#FFFFFF"
            android:text="LET'S ORGANIZE YOUR BEST TRIP EVER"
            android:textAlignment="center"
            android:textColor="#03A9F4"
            android:textColorHighlight="#03D8F4"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/signInButton"
            android:layout_width="150dp"
            android:layout_height="49dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:text="Sign In"
            android:textSize="12sp"
            app:backgroundTint="@color/turquoise"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/exploreButton"
            android:layout_width="150dp"
            android:layout_height="49dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="40dp"
            android:text="Let's Explore"
            android:textSize="12sp"
            app:backgroundTint="#FF66B2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/signInButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="307dp"
            android:layout_height="167dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView16"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/disney" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="336dp"
            android:layout_height="197dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/signInButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/venice" />

</androidx.constraintlayout.widget.ConstraintLayout>